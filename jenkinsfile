pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/DharaniOps/demo.git'
            }
        }

        stage('Deploy') {
            steps {
                sh 'source ~/ansible-venv/bin/activate && ansible-playbook -i inventory.ini deploy-app.yaml'
            }
        }

        stage('Verify') {
            steps {
                sh 'curl -s http://localhost:8080 | grep "Welcome to nginx!"'
            }
        }
    }
}

